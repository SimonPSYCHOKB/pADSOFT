package GUI;

import java.awt.event.*;

import javax.swing.JPanel;

import Application.*;

public class CoursesTableController extends MouseAdapter{

	private Application model;
	private General view;
	private Courses c;
	
	public CoursesTableController(General view, Application model, Courses c){
		this.view = view;
		this.model = model;
		this.c = c;
	}
	
	public void mouseClicked(MouseEvent e){
		int row = c.getTable().getSelectedRow();
		final Course selected = model.getCourses().get(row);
		UICourseEditable c = new UICourseEditable(selected, model);
		frame.addPanel(c);
	}
}
