package gui.windows;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import exercise.Exercise;
import exercise.Question;

public class CreateQuestionController implements ActionListener {
	
	
	private CreateQuestion view;
	private Exercise model;

	public CreateQuestionController(CreateQuestion view, Exercise model){
		this.view = view;
		this.model = model;
	}

	@Override
	public void actionPerformed(ActionEvent arg0) {
		//Question data
		String wording = view.getWording().getText();
		double penalty = (double) view.getPenalty().getValue();
		double weight = (double) view.getWeight().getValue();
		String type = (String) view.getTypeQuestion().getSelectedItem();
		
		if(type.equals("Multiple Choice"))
			new CreateMultipleAnswer();
	}

}
