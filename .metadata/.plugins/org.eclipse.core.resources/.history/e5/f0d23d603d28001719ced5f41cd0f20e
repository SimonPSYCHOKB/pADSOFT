package GUI;

import java.awt.*;
import java.awt.event.ActionListener;

import javax.swing.*;

public class CreationCourse extends JFrame{

	private static final long serialVersionUID = 1L;
	
	private JTextField titleField;
	private JTextField descField;
	private JCheckBox visibCheck;
	
	public CreationCourse(){
		super("New Course");
		
		SpringLayout layout = new SpringLayout();
		getContentPane().setLayout(layout);
		
		JLabel title = new JLabel("Title: ");
		JLabel desc = new JLabel("Description: ");
		JLabel visibility = new JLabel("Visibile: ");
		
		titleField = new JTextField(15);
		descField = new JTextField(30);
		visibCheck = new JCheckBox();
		
		layout.putConstraint(SpringLayout.WEST, title, 30, SpringLayout.WEST, this);
		layout.putConstraint(SpringLayout.NORTH, title, 30, SpringLayout.NORTH, this);
		layout.putConstraint(SpringLayout.WEST, desc, 30, SpringLayout.WEST, this);
		layout.putConstraint(SpringLayout.NORTH, desc, 30, SpringLayout.NORTH, title);
		layout.putConstraint(SpringLayout.WEST, visibility, 30, SpringLayout.WEST, this);
		layout.putConstraint(SpringLayout.NORTH, visibility, 30, SpringLayout.NORTH, desc);
		
		layout.putConstraint(SpringLayout.WEST, titleField, 90, SpringLayout.EAST, title);
		layout.putConstraint(SpringLayout.NORTH, titleField, 30, SpringLayout.NORTH, this);
		
		layout.putConstraint(SpringLayout.WEST, descField, 40, SpringLayout.EAST, desc);
		layout.putConstraint(SpringLayout.NORTH, descField, 30, SpringLayout.NORTH, titleField);
		
		layout.putConstraint(SpringLayout.WEST, visibCheck, 70, SpringLayout.EAST, visibility);
		layout.putConstraint(SpringLayout.NORTH, visibCheck, 30, SpringLayout.NORTH, descField);
		
		getContentPane().add(title); getContentPane().add(titleField);
		getContentPane().add(desc); getContentPane().add(descField);
		getContentPane().add(visibility); getContentPane().add(visibCheck);
		
		setSize(800, 800);
		Dimension dim = Toolkit.getDefaultToolkit().getScreenSize();
		setLocation(dim.width/2-this.getSize().width/2, dim.height/2-this.getSize().height/2);
		
		setVisible(true);
		setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
	}
	
	public void setControllerTitle(ActionListener al){
		titleField.addActionListener(al);
	}
	
	public void setControllerDesc(ActionListener al){
		descField.addActionListener(al);
	}
	
	public void setControllerVisib(ActionListener al){
		visibCheck.addActionListener(al);
	}

}
