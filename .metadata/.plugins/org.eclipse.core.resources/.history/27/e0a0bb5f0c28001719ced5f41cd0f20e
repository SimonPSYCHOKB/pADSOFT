package GUI;

import java.util.*;

import javax.swing.*;

import Test.*;

public class UIQuestion extends JPanel{

	private static final long serialVersionUID = 1L;
	private JPanel root;
	
	public UIQuestion(Question question) {
		root = new JPanel();
		root.setLayout(new BoxLayout(root, BoxLayout.PAGE_AXIS));
		
		JLabel wording = new JLabel(question.getQuestion());
		root.add(wording);
		root.setVisible(true);
		
		if(question instanceof SingleAnswer)
			for(JRadioButton button : SingleAnswer((SingleAnswer) question))
				root.add(button);
		else if(question instanceof MultipleAnswer)
			for(JCheckBox button : MultipleAnswer((MultipleAnswer) question))
				root.add(button);
		else 
			root.add(new JTextField(10));
	}
	
	private List<JRadioButton> SingleAnswer(SingleAnswer question){
		List<JRadioButton> buttons = new ArrayList<JRadioButton>();
		for(String option : question.getOptions()){
			JRadioButton radio = new JRadioButton(option);
			buttons.add(radio);
		}
		return buttons;
	}
	
	private List<JCheckBox> MultipleAnswer(MultipleAnswer question){
		List<JCheckBox> buttons = new ArrayList<JCheckBox>();
		for(String option : question.getOptions()){
			JCheckBox radio = new JCheckBox(option);
			buttons.add(radio);
		}
		return buttons;
	}

}
