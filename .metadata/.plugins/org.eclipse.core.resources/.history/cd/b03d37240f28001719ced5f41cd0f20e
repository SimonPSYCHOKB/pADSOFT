package GUI;

import java.util.*;

import javax.swing.*;

import Test.*;

public class UIQuestion extends JPanel{

	private static final long serialVersionUID = 1L;
	
	public UIQuestion(Question question) {
		setLayout(new BoxLayout(this, BoxLayout.PAGE_AXIS));
		
		JLabel wording = new JLabel(question.getQuestion());
		add(wording);
		
		if(question instanceof SingleAnswer){
			ButtonGroup buttons = new ButtonGroup();
			for(String option : ((SingleAnswer) question).getOptions()){
				JRadioButton radio = new JRadioButton(option);
				buttons.add(radio);
				add(radio);
			}
		}
		else if(question instanceof MultipleAnswer)
			for(JCheckBox button : MultipleAnswer((MultipleAnswer) question))
				add(button);
		else 
			add(new JTextField(10));
		
		setVisible(true);
	}
	
	
	private List<JCheckBox> MultipleAnswer(MultipleAnswer question){
		List<JCheckBox> buttons = new ArrayList<JCheckBox>();
		for(String option : question.getOptions()){
			JCheckBox radio = new JCheckBox(option);
			buttons.add(radio);
		}
		return buttons;
	}

}
