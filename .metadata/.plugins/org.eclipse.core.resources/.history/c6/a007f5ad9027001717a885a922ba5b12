package GUI;

import java.awt.event.*;

import Application.Application;

public class CoursesController implements MouseListener{

	private Application model;
	private Courses view;
	
	public CoursesController(Application model, Courses view) {
		this.model = model;
		this.view = view;
	}

	@Override
	public void mouseClicked(MouseEvent e) {
		int row = view.getTable().getSelectedRow();
		UICourse c = new UICourse(model.getCourses().get(row));
		view.getGeneral().addPanel(c);
	}

	@Override
	public void mouseEntered(MouseEvent arg0) {
	}

	@Override
	public void mouseExited(MouseEvent arg0) {
	}

	@Override
	public void mousePressed(MouseEvent arg0) {
	}

	@Override
	public void mouseReleased(MouseEvent arg0) {
	}

}
