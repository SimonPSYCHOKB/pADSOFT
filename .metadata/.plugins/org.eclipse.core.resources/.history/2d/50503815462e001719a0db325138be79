package GUI;

import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;
import javax.swing.*;

import Statistics.CourseStatistic;

public class ExercisesStatsController extends MouseAdapter{
	
	private Application model;
	private General view;
	
	public ExercisesStatsController(Application model, General view){
		this.model = model;
		this.view = view;
	}
	
	
	public void mouseClicked(MouseEvent me) {
		int row = ((JTable) me.getSource()).getSelectedRow();
		Statistic current = new Statistic(model.getTests().get(row));
		ExercisesStats es = new ExercisesStats(current);
		view.addPanel(es);		
		SwingUtilities.updateComponentTreeUI(view);
		es.addController(ma);
	}
}
