package GUI;

import java.awt.*;
import java.awt.event.*;

import java.util.List;

import javax.swing.*;


import Test.*;

public class Test extends JFrame{
	
	private static final long serialVersionUID = 1L;
	
	JButton next;
	JButton previous;
	JButton cancel;
	
	public Test(Exercise e) {
		
		getContentPane().setLayout(new BorderLayout());
		
		JPanel exercise = new JPanel();
		exercise.setLayout(new BoxLayout(exercise, BoxLayout.PAGE_AXIS));
		
//		for(Question q : e.getQuestions()){
//			JLabel wording = new JLabel(q.getQuestion());
//			exercise.add(wording);
//		}
		
		List<Question> questions = e.getQuestions();
		UIQuestion question = new UIQuestion(questions.get(0));
		
		exercise.add(question);
		exercise.setVisible(true);
		
		JPanel buttons = new JPanel(new FlowLayout());
		next = new JButton("Next");
		previous = new JButton("Previous");
		cancel = new JButton("Cancel");
		buttons.add(previous);
		buttons.add(cancel);
		buttons.add(next);
		
		add(buttons, BorderLayout.SOUTH);
		
		add(exercise, BorderLayout.CENTER);
		setVisible(true);
		setSize(1000, 800);
		setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		
		Dimension dim = Toolkit.getDefaultToolkit().getScreenSize();
		this.setLocation(dim.width/2-this.getSize().width/2, dim.height/2-this.getSize().height/2);
	}
	
	public void setControllerNext(ActionListener al){
		next.addActionListener(al);
	}
	
	public void setControllerPrevious(ActionListener al){
		previous.addActionListener(al);
	}

	public void setControllerCancel(ActionListener al){
		cancel.addActionListener(al);
	}
}
