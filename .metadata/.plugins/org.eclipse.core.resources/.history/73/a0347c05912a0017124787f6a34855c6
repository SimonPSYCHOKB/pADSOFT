package GUI;

import java.awt.event.*;

import javax.swing.*;

import Test.*;

public class EditQuestion extends JPanel{

	private static final long serialVersionUID = 1L;
//	myField.addFocusListener(new FocusListener() {
//    public void focusGained(FocusEvent e) {
//        myField.setText("");
//    }
//
//    public void focusLost(FocusEvent e) {
//        // nothing
//    }
//});
	public EditQuestion(Question q){
		//BoxLayout
		setLayout(new BoxLayout(this, BoxLayout.PAGE_AXIS));
		
		//Wording
		final JTextField wording = new JTextField(q.getQuestion());
		wording.addFocusListener(new FocusListener(){
			@Override
			public void focusGained(FocusEvent arg0) {
				wording.setText("");
			}
			@Override
			public void focusLost(FocusEvent arg0){}
		});
		
		//Options
		
	}
}
