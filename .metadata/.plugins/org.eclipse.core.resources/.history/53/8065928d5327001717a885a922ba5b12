package GUI;

import java.awt.event.*;
import javax.swing.*;

import Application.Application;

public class LogInController implements ActionListener{
	
	private Application model;
	private LogIn view;
	
	public LogInController(Application model, LogIn view){
		this.model = model;
		this.view = view;
	}
	
	@Override
	public void actionPerformed(ActionEvent arg0) {
		
		String name = view.getUserName();
		String password = view.getPassword();
		
		if (model.logIn(name, password) == false){
			JOptionPane.showMessageDialog(view, "Invalid user and password combination.", "Error", JOptionPane.ERROR_MESSAGE);
		}
			//Meternos en la página principal con los cursos y demás
			// Tener en cuenta la info del alumno/profesor
		// Si no se ha podido acceder mostrar mensaje de error
	}
	
	

}
